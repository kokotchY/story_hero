digraph story {
	labelloc="t"
	label="{{story.name}}"
{% for step in story.steps -%}
	step_{{step.id}} [label="{{step.name}}"{% if step.final %} color=lightblue2, style=filled{% endif %}]
{% endfor -%}
{% for step in story.steps -%}
	{% if not step.final -%}
	{% if step.first_choice_step_id %}
	step_{{step.id}} -> step_{{step.first_choice_step_id}} [label="{{step.first_choice}}"]
	{% endif %}
	{% if step.second_choice_step_id %}
	step_{{step.id}} -> step_{{step.second_choice_step_id}} [label="{{step.second_choice}}"]
	{% endif %}
	{% endif -%}
{% endfor -%}
}
